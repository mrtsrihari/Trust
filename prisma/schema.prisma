generator client {
  provider = "prisma-client-js"
}

model College {
  id           String        @id @default(uuid())
  name         String        @unique
  email        String        @unique
  password     String        // hashed password
  createdAt    DateTime      @default(now())
  certificates Certificate[] // relation: a college has many certificates
}

model Admin {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  role     String   @default("admin")
}

model Certificate {
  id             String   @id @default(uuid())
  certificateId  String   @unique
  studentName    String              // AES encrypted
  email          String              // AES encrypted email
  emailHash      String            // hashData(email) (stored for searching)
  dob            DateTime
  course         String              // AES encrypted course
  adharHash      String              // hashed Aadhaar for verification
  adharEncrypted String          // AES encrypted Aadhaar
  blockchainHash String
  rollNo         String
  link           String              // encrypted file link
  collegeId      String
  createdAt      DateTime @default(now())

  college College @relation(fields: [collegeId], references: [id])
}
